.chat-main
  .chat-main__group-info
    .chat-main__group-info__left
      .chat-main__group-info__left__name
        = @group.name
      .chat-main__group-info__left__member
        Memberï¼š
        .chat-main__group-info__left__member__detail
          - @users.each do |user|
            = user.name
    .chat-main__group-info__right
      = link_to edit_group_path(@group), class: "chat-main__group-info__right__edit" do
        Edit
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    = form_for [@group, @message], html: {class: "chat-main__message-form__input"} do |f|
      .chat-main__message-form__input__text-area
        = f.text_field :content, placeholder: "type a message", class: "chat-main__message-form__input__text-area__text"
        .chat-main__message-form__input__text-area__text__image
          = f.label :image, class: "chat-main__message-form__input__text-area__text__image__label" do
            = icon('fas', 'image')
            = f.file_field :image, class: "chat-main__message-form__input__text-area__text__image__label__file"
      .chat-main__message-form__input__send
        = f.submit "Send", class: "chat-main__message-form__input__send__btn"